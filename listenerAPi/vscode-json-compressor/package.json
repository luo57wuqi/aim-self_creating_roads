{
  "name": "json-compressor",
  "displayName": "JSON Compressor",
  "description": "压缩多行JSON对象为单行，快捷键 Alt+L",
  "version": "1.0.0",
  "publisher": "your-name",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:json-compressor.compress"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "json-compressor.compress",
        "title": "压缩JSON对象"
      }
    ],
    "keybindings": [
      {
        "command": "json-compressor.compress",
        "key": "alt+l",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "eslint": "^8.26.0"
  }
}